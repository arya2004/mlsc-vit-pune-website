// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}


model WebUser {
  id      Int      @id @default(autoincrement())
  email   String?   @unique
  name    String?
  password String?
}

model User {
  id      Int      @id @default(autoincrement())
  email String?  @unique
  password String?
  fullName    String?
  domain String
  position String
  year Int
  xLink String
  linkedinLink String
  githubLink String
  aboutMe String?
  imageLink String
  role    Role     @default(TEAM_MEMBER)
  projects Project[]
  blogs Blog[]
  
}


model Blog {
  id         Int        @id @default(autoincrement())
  title      String
  published  Boolean    @default(false)
  link      String?
  description   String
  imageUrl  String
  domain   String
  author     User       @relation(fields: [authorId], references: [id])
  authorId   Int
}

model Project {
  id         Int        @id @default(autoincrement())
  title      String
  gitUrl     String
  imageLink       String?
  description String
  maintainer     User       @relation(fields: [maintainerId], references: [id])
  maintainerId   Int


}

model Event { 
  id    Int    @id @default(autoincrement())
  name  String
  tagline String
  date  DateTime
  description String
  footfall String
  eventSpan Int
  link String
  organisingPeople Int
}

enum Role {
  TEAM_MEMBER
  ADMIN
}